<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="home-pane" prefHeight="600.0" prefWidth="450.0" stylesheets="@Style.css" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eclipse.gui.HomeScreenController">
    <children>
        <VBox alignment="CENTER" layoutX="255.0" layoutY="26.0" spacing="15.0">
            <children>
                <Label style="-fx-font-size: 60;" text="Title">
                    <font>
                        <Font name="Verdana" size="24.0" />
                    </font>
                    <padding>
                        <Insets bottom="10.0" />
                    </padding>
                </Label>
                <Button fx:id="start" mnemonicParsing="false" text="Start Game" />
                <Button fx:id="scoreboard" mnemonicParsing="false" prefHeight="25.0" prefWidth="90.0" text="Scoreboard" />
                <Button fx:id="settings" mnemonicParsing="false" text="Help" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
